#!/usr/bin/env perl
use 5.012;
use warnings;
use utf8::all;
use Env qw/CONCIEGGS_LIB_DIR/;

my %mirrors = (
    "a" => "\x{0250}" ,
    "b" => "q" ,
    "c" => "\x{0254}" ,
    "d" => "p" ,
    "e" => "\x{01DD}" ,
    "f" => "\x{025F}" ,
    "g" => "\x{0183}" ,
    "h" => "\x{0265}" ,
    "i" => "\x{0131}" ,
    "j" => "\x{027E}" ,
    "k" => "\x{029E}" ,
    "m" => "\x{026F}" ,
    "n" => "u" ,
    "r" => "\x{0279}" ,
    "t" => "\x{0287}" ,
    "v" => "\x{028C}" ,
    "w" => "\x{028D}" ,
    "y" => "\x{028E}" ,
    "A" => "\x{2200}" ,
    "C" => "\x{0186}" ,
    "E" => "\x{018E}" ,
    "F" => "\x{2132}" ,
    "G" => "\x{05E4}" ,
    "H" => "H" ,
    "I" => "I" ,
    "J" => "\x{017F}" ,
    "L" => "\x{02E5}" ,
    "M" => "W" ,
    "N" => "N" ,
    "P" => "\x{0500}" ,
    "T" => "\x{2534}" ,
    "U" => "\x{2229}" ,
    "V" => "\x{039B}" ,
    "Y" => "\x{2144}" ,
    "1" => "\x{0196}" ,
    "2" => "\x{1105}" ,
    "3" => "\x{0190}" ,
    "4" => "\x{3123}" ,
    "5" => "\x{03DB}" ,
    "6" => "9" ,
    "7" => "\x{3125}" ,
    "8" => "8" ,
    "9" => "6" ,
    "0" => "0" ,
    "." => "\x{02D9}" ,
    "," => "'" ,
    "\'" => "," ,
    "`" => "," ,
    "?" => "\x{00BF}" ,
    "!" => "\x{00A1}" ,
    "[" => "]" ,
    "]" => "[" ,
    "(" => ")" ,
    ")" => "(" ,
    "" => "" ,
    "" => "" ,
    "<" => ">" ,
    ">" => "<" ,
    "&" => "\x{214B}" ,
    "_" => "\x{203E}" ,
    "\x{2234}" => "\x{2235}" ,
    "\x{2045}" => "\x{2046}" ,
);

while (my $line = <>) {
    my @chars = split(//, $line);
    @chars = map { $mirrors{$_} // $_ } @chars;

    print join("", @chars);
}

