#!/usr/bin/env perl
use 5.012;
use warnings;
use utf8::all;
use Env qw/CONCIEGGS_LIB_DIR/;

my %aliases = map { (lc($_) => 1) } split("\n", `allAliases`);

sub niels {
    my $name = shift;

    return $name unless $aliases{lc($name)};

    my @names = qw/Niels/;
    return $names[rand @names];
}

while (my $line = <>) {
    $line =~ s/\b(\S*)\b/niels($1)/ge;

    print $line;
}

