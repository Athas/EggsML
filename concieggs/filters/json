#!/usr/bin/env perl
# Concieggs kan ogs√• fungere som en RESTful service.
use 5.012;
use warnings;

use JSON qw/to_json/;

sub rand_code {
    my @codes = qw/500 503/;
    return $codes[rand @codes];
}

sub rand_error {
    my @messages = (
        "Service unavailable",
        "Gateway unreachable",
        "Connection timed out",
    );
    return $messages[rand @messages];
}

if (rand() < 0.1) {
    printf("%s\n", to_json( { status => "failure", response_code => rand_code(), reason => rand_error() } ) );
} else {
    printf("%s\n", to_json( { data => { message => join("\n", <>) }, status => "success" } ));
}
