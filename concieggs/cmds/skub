#!/usr/bin/env perl
use 5.020;
use warnings;
use utf8::all;
use Encode qw/decode/;

my $arg = join(' ', @ARGV);
my $EGGS_USER = decode('utf-8', $ENV{EGGS_USER});

if ($arg =~ qr/(skub,? ?)*til grenen/) {
    say "$EGGS_USER: La' mig se din' git skillz ved tr√¶et!";
} else {
    say "/me skubber til $EGGS_USER i stedet for.";
}
