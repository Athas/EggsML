#!/bin/sh
#
# Brug concieggs' tid p√• at svine folk til.

. $CONCIEGGS_DIR/concieggs.conf

ass=$EGGS_USER

if [ $# -gt 0 ]; then
    swine="$1"
else
    echo "Brug: svin <navn> [til]"
    exit
fi

if [ "$swine" = "$irc_username" -o "$swine" = "$irc_username" ]; then
    echo "$ass: Nej."
    putInBadStanding "$EGGS_USER"
    exit
fi

echo "$swine: Din mor!" > $CONCIEGGS_IRC_DIR/$irc_channel/in
