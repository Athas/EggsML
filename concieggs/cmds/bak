#!/bin/sh
#
# Få concieggs's støtte.

eval "$(echo "$@" | parse '^(?<ok>mig op)( på #(?<kanal>[^ ]+))?$')"

support() {
    (echo "$EGGS_USER: Du har så ret!"
     echo "$EGGS_USER: Enig!"
     echo "$EGGS_USER har helt ret."
     echo "Fandeme godt sagt, $EGGS_USER!"
     echo "Prædk det, $EGGS_USER!"
     echo "Lyt til $EGGS_USER, han ved hvad han taler om.") |
    randomElement
}

if [ "$ok" ]; then
    if [ "$kanal" ]; then
        support | sayTo "#$kanal"
    else
        support
    fi
else
    echo "$EGGS_USER: Brug: bak mig op [på #kanal]"
fi
