#!/bin/sh
#
# Foretag en søgning i concieggs' omfattende hukommelse efter detaljer
# omkring et givent emne.

. $CONCIEGGS_DIR/eggspi.lib

lookup() {
     cat $CONCIEGGS_DB_DIR/fakta | sort | grep -F -i "$*"
}

if echo "$*" | egrep -i '^naja?' > /dev/null; then
    echo "Nej, lad nu være."
    exit
fi

if [ "$*" ]; then
    if ! lookup "$*"; then
        echo "Jeg ved ikke noget om $*."
    fi
else
    echo "Men hvad skal jeg forklare?"
fi 
