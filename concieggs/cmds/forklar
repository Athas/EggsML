#!/bin/sh

lookup() {
    param=$(echo "$EGGS_ARGS"| awk '{print tolower($0)}')
    cat $CONCIEGGS_DB_DIR/fakta | while read faktum; do
        echo "$faktum" | awk '{print tolower($0)}' | fgrep $param
}

if [ "$EGGS_ARGS" ]; then
    if ! lookup; then
        echo "Det ved jeg ikke noget om."
    fi
else
    echo "Men hvad skal jeg forklare?"
fi 
