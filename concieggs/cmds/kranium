#!/bin/sh
#
# Returner hash af concieggs' HEAD eller andet commit ved at henvise til det, som git g√∏r.
SVIP=${1:-"HEAD"}
[ "$#" -gt 0 ] && [ "$1" != 'HEAD' ] && VERB="var" || VERB="er"
echo "Jeg $VERB $(git rev-parse $SVIP) med commitbeskeden \"$(git log --format=%B -n 1 $SVIP)\", forfattet af $(git log --pretty=format:'%an' -n 1 $SVIP) $(git show -s --format=%cd --date=local $SVIP)."
