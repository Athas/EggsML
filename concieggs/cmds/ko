#!/bin/sh
#!/usr/bin/env perl
#
# Kaster til "cowsay".
# for parametre se:
# https://en.wikipedia.org/wiki/Cowsay

echo "Denne kommando er placeret under embargo indtil de voldsomme overgreb mod blanktegnsskik oph√∏rer."
annoyedBy "$EGGS_USER" 10
exit 0

use 5.012;

if ($ARGV[0] =~ /[bdgpstwy]/) {
  system('cowsay', ('-'.$ARGV[0]), @ARGV[1..@ARGV])
} else {
   system('cowsay', "-d", @ARGV);
}
