#!/bin/sh

the_wheels=$(randomLine <<EOF
bitsne
dataene
koderne
brugerene
EOF
)

on=på

the_bus=$(randomLine <<EOF
bussen
chippen
maskinen
datamaten
systemet
EOF
)

go=$(randomLine <<EOF
flyver
løber
snurrer
hopper
springer
hacker
EOF
)

round=$(randomLine <<EOF
rundt
stærkt
frem
op
ned
af
på
EOF
)

all_through_the_town=$(randomLine <<EOF
Hjemme hos Pawel
Hele natten lang
Indtil de får fri
Henne på Caféen?
Ude hos PET
EOF
                    )

on=på
if [ $# = 5 ]; then
    the_wheels=$1
    on=$2
    the_bus=$3
    go=$4
    round=$5
fi

if [ $# = 8 ]; then
    the_wheels=$1
    on=$2
    the_bus=$3
    go=$4
    round=$5
    all_through_the_town="$6 $7 $8"
fi

perl -nE 'print ucfirst' <<EOF
$the_wheels $on $the_bus $go $round, $round, $round
$round, $round, $round
$round, $round, $round
$the_wheels $on $the_bus $go $round, $round, $round
$all_through_the_town
EOF
