#!/bin/sh
#
# Den sjove stak!




nemklods() {
    randomLine <<EOF
\\cC04\\cB\\cBrød klods
\\cC12\\cB\\cBblå klods
\\cC09\\cB\\cBgrøn klods
EOF
}

middelklods() {
    randomLine <<EOF
"\cC08\cB\cBgul klods"
EOF
}

svarklods() {
    randomLine <<EOF
"\cC01\cB\cBsort klods"
EOF
}

point() {
    randomLine<<EOF
dejlig pære
rødt kirsebær
diskette
Mars-bar
EOF
}

generator() {
    randomLine <<EOF
$(nemklods)
$(nemklods)
$(nemklods)
$(nemklods)
$(nemklods)
$(middelklods)
$(middelklods)
$(middelklods)
$(svarklods)
$(svarklods)
"\cC\cB\cB00$(point)"
EOF
}


generateSomeBlocks() {
    numBlocks=$1
    output=""
    for i in $(seq 1 $numBlocks)
    do
        klods=$(generator)
        output="$output$klods\n"
    done
    echo $output
}

arg=$1
if [ "$arg" = "forfra" ]; then
    dbDelete stakken
    echo "Aye aye, $EGGS_USER! Jeg har ryddet stakken."
    exit
fi

stak="$(dbRead stakken)"
if ! [ "$stak" ]; then
    stak=$(generateSomeBlocks 20)
    echo "$stak" | dbWrite stakken
fi
echo "$stak\c0"

