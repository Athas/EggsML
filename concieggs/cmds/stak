#!/bin/sh
#
# Den sjove stak!

nemklods() {
    randomLine <<EOF
\u000304rød klods
\u000312blå klods
\u000309grøn klods
EOF
}

middelklods() {
    randomLine <<EOF
\u000308gul klods
EOF
}

svarklods() {
    randomLine <<EOF
\u000301sort klods
EOF
}

point() {
    randomLine<<EOF
dejlig pære
rødt kirsebær
diskette
Mars-bar
EOF
}

generator() {
    randomLine <<EOF
$(nemklods)
$(nemklods)
$(nemklods)
$(nemklods)
$(nemklods)
$(middelklods)
$(middelklods)
$(middelklods)
$(svarklods)
$(svarklods)
\u000300$(point)
EOF
}


generateSomeBlocks() {
    numBlocks=$1
    output=""
    for i in $(seq 1 $numBlocks)
    do
        klods=$(generator)
        output="$output$klods\n"
    done
    echo $output
}

arg=$1
if [ "$arg" = "forfra" ]; then
    dbDelete stakken
    exit
fi

stak=$(dbRead stakken)
if [ "$stak" ]; then
    echo "$stak"
else
    nyStak=$(generateSomeBlocks 20)
    echo "$nyStak" | dbWrite stakken
    echo "$nyStak"
fi

