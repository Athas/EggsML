#!/bin/sh
#
# Byd concieggs op til dans!  Brug: dans

eval "$(echo "$@" | tolower | parse 'på (?<ting>.+)$|til (?<kanal>.+)$')"

if [ "$ting" = roser ]; then
    say "$EGGS_USER: Hrmpf!"
    exit
fi

if [ "$kanal" ]; then
    SANG=$(whatsPlaying "$kanal")
else
    SANG=$(whatsPlaying "alfa")
fi


DM() {
    randomLine <<EOF
DM
Danmarksmesterskabet
EM
Europamesterskabet
VM
Verdensmesterskabet
OL
De olympiske lege
Wimbledon
EOF
}

dans() {
    randomLine <<EOF
dans
danseri
dansning
dancing
tanz-tanz-tanz
danse-dusse-da
disko-gymnastik
EOF
}

smukke() {
    randomLine <<EOF
smukke
elegante
uforståelige
fantastiske
dirtey
rytmiske
EOF
}

trin() {
    randomLine <<EOF
trin
moves
bevægelser
EOF
}

benet() {
    randomLine <<EOF
benet
armen
næsen
foden
fingrene
EOF
}

frem() {
    randomLine <<EOF
frem
tilbage
i cirkler
EOF
}

pirouette() {
    randomLine <<EOF
pirouette
salto
pældans
baglænder
EOF
}

tillaeg() {
    randomLine <<EOF

 så
 fint
 drastisk
EOF
}

abe() {
    randomLine <<EOF
abe
guerilla
giraf
zebra
pingvin
EOF
}

danseart() {
    randomLine <<EOF
tango
salsa
zumba
vals
diskodasko
EOF
}

offer() {
    recentlyActive | randomLine
}

svanen() {
    randomLine <<EOF
svanen
hejren
hjejlen
dodoen
pingvinen
EOF
}

danser() {
    randomLine <<EOF
flytter$(tillaeg) $(benet) $(frem)
laver en $(pirouette)
hopper som en $(abe)
går frem, og tilbage, fra side, til side
giver $(offer) en lapdance i en stol
har den bedste tid i sit liv med $(offer)
laver en Swayze og råber "Ingen sætter $(offer) i hjørnet!"
improviserer et par $(danseart)-trin
viser sin $(danseart)-$(danseart)-fusionsdans frem
tager en maske på og laver $(svanen)
følger reglerne i $(danseart) til punkt og prikke
EOF
}

Tada() {
    randomLine <<EOF
Tada!
Var det ikke bare flot?
Giv mig nu penge!
Fuld point!
Juhuuu!
Douze points.
Jeg elsker mine fans!
EOF
}

say "$(DM) i $(dans)!"
say "/me sætter et bånd med $SANG i afspilleren."
say "Nu kommer der $(smukke) $(trin)!"
for i in $(seq 1 $(random 5 10)); do
    say "/me $(danser)"
done
say "$(Tada)"
