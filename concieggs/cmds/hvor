#!/bin/sh
#
# Spørg hvor mange ...

factor=`randomElement <<EOF
millioner
tusinde
milliarder
tusindedele
hundrededele
EOF`

eval "$(echo "$@" | parse '^ *(?<gammel>gammel).*')"

if [ "$gammel" ]; then
    unit=$(randomElement <<EOF
år
dage
sekunder
livstider
uger
måneder
EOF
)
    echo "$EGGS_USER: $(random 2 1337) $factor $unit!"
else
    echo "$EGGS_USER: $(random 2 1337) $factor!"
fi
