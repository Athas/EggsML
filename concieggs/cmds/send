#!/bin/sh
#
# Udf√∏r en kommando og send resultatet via elektropost til den givne
# adresse.

set -f

eval "$(echo "$@" | parse '(?<rawcmd>.+)( til (?<addr>.+@.+|twitter|internettet|spiltirsdag))')"

if [ "$rawcmd" ]; then
    if [ "$addr" = "spiltirsdag" ]; then
        addr="concieggs@spiltirsdag.dk"
    fi

    cmd=$(echo "$rawcmd" | cut -d' ' -f 1)
    args=$(echo "$rawcmd"| sed 's/[^ ]* *//')
    result=$(runcmd "$cmd" $args)

    if [ "$addr" = "twitter" ] || [ "$addr" = "internettet" ]; then
        runcmd kvidr "$result"
    else
        echo "Sender $rawcmd til $addr!"
        echo $result | mailx -r concieggs@eggsml.dk \
                             -s "Afvikling af $rawcmd, anmodet af $EGGS_USER" "$addr"
    fi
else
    echo 'Brug: send <kommando> til <hvem@hvor>|hvad'
fi
