#!/usr/bin/env python
# vim: set fileencoding=utf-8 :
# Giv din mening til kende omkring en trunte

import simplejson as json
from os import environ, path
from sys import exit
import sys
import time

def main():
    if len(sys.argv) < 3:
        print "Nej, du gør det forkert. Sådan gøres det korrekt: vurder redhead 6.0"
        exit(0)

    trunte = sys.argv[1]
    truntel = trunte.lower()

    try:
        stemme = float(sys.argv[2])
    except ValueError:
        print "Formatet er: vurder redhead 6.0"
        exit(0)

    if stemme < 0 or stemme > 10:
        print "Jaja, nu prøver du lige igen med en stemme mellem 0 og 10."
        exit(0)

    datafile = path.join(environ['CONCIEGGS_DB_DIR'], 'truntestats')

    if not path.exists(datafile):
        f = open(datafile, 'w+')
        f.write('{}')
        f.close()

    dbfile = open(datafile, 'r')
    db = json.load(dbfile)
    dbfile.close()

    if truntel not in db:
        print "Jeg kender ikke den trunte. Opret hende med 'nytrunte %s'." % trunte
        exit(0)

    eggser = environ['EGGS_USER']

    db[truntel]['vurderinger'][eggser] = {'stemme': stemme, 'tidspunkt': time.time()}

    s = 0
    c = 0
    for e in db[truntel]['vurderinger'].iterkeys():
        s += db[truntel]['vurderinger'][e]['stemme']
        c += 1

    db[truntel]['gennemsnit'] = s/c

    dbfile = open(datafile, 'w')
    json.dump(db, dbfile)
    dbfile.close()
    print "%s har nu et gennemsnit på %.3f/10 efter %d stemmer." % \
            (trunte, db[truntel]['gennemsnit'], len(db[truntel]['vurderinger']))
    dbfile.close()

if __name__ == '__main__':
    main()
