#!/bin/sh
#
# Bed concieggs om at være på en bestemt led.  Brug: 'vær MÅDE' eller 'vær MÅDE
# mod BRUGER' eller 'vær MÅDE på KANAL'.  Der er mange MÅDER.

eval "$(echo "$@" | parse '^(?<what>.+?)(?: (?:mod|på) (?<specific>#?[^\s/]+))?$')"

if [ ! "$what" ]; then
    echo "Du mangler en væremåde."
    exit
fi

if [ "$specific" ]; then
    file=outfilter_command_$specific
    shift 2
else
    file=outfilter_command
fi

save() {
    echo "$1" | dbWrite $file
    echo "$(ack)  Væremåden er sat!"
}

case "$*" in
    # Gå tilbage til normal kedsomhed.
    normal)
        save '';;

    # Specielle ord.
    "ultra grinern")
        save 'filter grinern';;
    1337)
        save 'filter leet';;
    "min")
        echo "Måske senere...";;

    # Sprog el.lign.
    *)
        s='translate da'
        while [ "$1" != '' ]; do
            lc=$(langcode "$1")
            if [ "$lc" != '' ]; then
                s="$s $lc"
            else
                echo "$1 er ikke et sprog!"
                exit
            fi
            shift
        done
        save "$s"
esac
