#!/bin/sh
#
# Spørg om din gæld til frokostkassen

. $CONCIEGGS_DIR/eggspi.lib

if [ $# -eq 2 -a $1 = "skylder" -a $2 = "jeg" ]; then
    user=$EGGS_USER
elif [ $# -eq 2 -a $1 = "skylder" ]; then
    user=$2
else
    echo $@
    echo "Brug: hvad skylder [navn|jeg]"
    exit
fi

alias=$(randomName "$user")
if [ ! "$alias" ]; then
    echo "Jeg kender ikke $user"
    exit
fi

debt=$(lookupDebt $user)

if [ "$debt" ]; then
    if [ $(echo "0 $(echo $debt | sed s/\-/_/) [1p] sX >X" | dc) ]; then
        echo "$alias skylder $debt kr. til frokostkassen!"
    else
        echo "$alias har $debt kr. til gode i frokostkassen!"
    fi
else
    echo "Fejl ved beregning af gæld for $user"
fi
