#!/bin/sh
#
# Udskriv alle kommende Eggs med tilmeldte deltagere.

. $CONCIEGGS_DIR/eggspi.lib

next=$(nextEggs)
if [ "$next" != "" ]; then
    nextEggs | while read eggs; do
        hour="$(dateSecs $eggs +%H)"
        if [ $hour = 13 ]; then
            desc="gentleman Eggs"
        elif [ $hour = 14 ]; then
            desc="Eggs royale"
        else
            desc="Eggs"
        fi
        echo "Der er $(countEggsers $eggs) tilmeldt til $desc $(timeToDate $eggs): $(describeEggs $eggs)."
    done
else
    echo "Ingen har tilmeldt sig eggs!"
fi
