#!/bin/sh

. $CONCIEGGS_DIR/eggspi.lib

aliases "$EGGS_USER" | while read -r alias; do
    time=$(dbRead "$alias/eggsactly")
    if [ "$time" ]
        if [ "$(expr $(nowTime) - $time)" -lt $(expr 5 '*' 60) ]; then
            echo "$(randomName $alias) har beg√•et en Reenberg!"
            echo "$(nowTime)" | dbWrite "$alias/reenberg/when"
            echo "$(expr $(nowTime) - $time)" | dbWrite "$alias/reenberg/loss"
        fi
    fi
done
