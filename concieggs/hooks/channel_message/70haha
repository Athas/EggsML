#!/bin/sh
#
# Grin højlydt.

shuttingUp && exit

# maybeGood .4 || exit

ha=$(laughter)

foranSjov=$(randomLine <<EOF
VILDT
ULTRA
ROFLENDE
MEGA
LOLLENDE
EOF
)

sjov="$foranSjov $(randomLine <<EOF
GRINERN
SJOV
MORSOM
LOLZ
ROFLCOPTER
EOF
)"

new=$(say "$EGGS_BODY" | sed -r -e "s/(h[aøe](h[aøe])+|[Hh]eh)/$ha/g" -e "s/(sjov[te]?|grinern|morsom(t|me)?|skæg(t|ge)?)([ .,:;$])/${sjov}\4/g")

if [ "$new" != "$EGGS_BODY" ]; then
    say "$new"
    pleasedBy "$EGGS_USER" 5
fi
