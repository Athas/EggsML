#!/bin/sh
#
# Lol derudaf.

shuttingUp && exit

lol() {
    o=o
    O=O
    for i in $(seq 1 $(random 0 4)); do
        o=$o$o
        O=$O$O
    done
    randomLine <<EOF
l${o}l
L${O}L
lollern
rofl
ROFLMAO
EOF
}

if echo "$EGGS_BODY" | grep -qE '[Ll][Oo][Ll]|[Rr][Oo][Ff][Ll]|xD|1drv.ms'; then
    lol
fi
