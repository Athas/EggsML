#!/bin/sh

shuttingUp && exit
isTodayRoyal || exit
maybeGood .1 || exit
checkCooldown royal $((60*20)) || exit

event=$(royalsToday | randomLine)
randomLine <<EOF
Busserne flager!  Det er sikkert pÃ¥ grund af $event.
I dag er det $event.  Lad os alle flage.
Husk at flage for $event!
Hurra, $event!
EOF
