#!/bin/sh

prog=$(cat <<"EOF"
function frobword_inner(s) {
  fst = substr(s,1,1)
  prefix = toupper(s) == s ? "JULE-" : toupper(fst) == fst ? "Jule-" : "jule-"
  if (length(s) > 3 && !festive) {
    return prefix s
  } else if (length(s) > 3 && rand() > 0.1) {
    return frobword_inner(prefix s)
  } else {
    return s
  }
}
function frobword(s) {
  if (match(s, "[jJ]ul") != 1 && rand() > 0.75) {
    return frobword_inner(s)
  } else {
    return s
  }
}
function maybefrob(s) {
  match(s, "[a-zA-ZæøåÆØÅ]+")
  pre=substr(s,1,RSTART-1)
  cur=substr(s,RSTART,RLENGTH)
  post=substr(s,RSTART+RLENGTH,length(s))
  if (RSTART == 0) {
    return s
  } else {
    return pre frobword(cur) frob(post)
  }
}
function frob(s) {
  match(s, "https?://[^ ]+")
  pre=substr(s,1,RSTART-1)
  cur=substr(s,RSTART,RLENGTH)
  post=substr(s,RSTART+RLENGTH,length(s))
  if (RSTART == 0) {
    return maybefrob(pre) maybefrob(cur) frob(post)
  } else {
    return maybefrob(pre) cur frob(post)
  }
}
{
festive=0
srand()
print frob($0)
fflush(); 
}
EOF
)

awk -- "$prog" | sed "s/træ/juletræ-/g" | sed "s/Træ/Juletræ-/g"
