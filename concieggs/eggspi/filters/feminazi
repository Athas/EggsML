    $text =~ s/hans/hendes/g;
    $text =~ s/han/hun/g;
    $text =~ s/ham/hende/g;
    $text =~ s/mand/kvinde/g;
    $text =~ s/far/mor/g;
    $text =~ s/fader/moder/g;
    $text =~ s/penis/vagina/g;
    $text =~ s/pik/kusse/g;
    $text =~ s/diller/fjams/g;
    $text =~ s/sk√¶g\b/bryst/g;

    print $text;
}
