#!/usr/bin/env perl
use 5.012;
use warnings;
use utf8::all;
use Env qw/CONCIEGGS_LIB_DIR/;

sub nuserfy {
    my $name = shift;

    my $rn = `randomName "$name"`;
    return $name unless $rn;

    my @options = (
        (map { "$name$_" } qw(
            -musen
            -snut
            kins
            pus
            -missen
            -nus
            -kis
            -trut
            .mus
            -skatten
            
        )),
        qw(
            pullernuller
            nullerg√∏j
            skattebasse
            trut
            pillerpaller
            duller
            trunte
            tutternas
            tillernus
            misling
        ),
    );

    return $options[rand @options];
}

while (my $line = <>) {
    $line =~ s/\b(\S*)\b/nuserfy($1)/ge;

    print $line;
}

