#!/usr/bin/env perl
use 5.012;
use warnings;
use utf8::all;

while (<>) {
    s/^(.*)$/\L$1/;
    s/ det / d /g;
    s/sgu /sq /g;
    s/g/q/g;
    s/ikke/ik/g;
    s/en hamster/et hamster/g;
    s/q(?:nne|')//g;
    s/iq/iiq/g;
    s/(?<=q)u//g;
    s/\?/???/g;
    s/(\W*)\s*$/ lizzom$1/;
    s/\bh(?=v)//g;
    print
}

