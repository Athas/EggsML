use 5.020;
use strict;
use warnings;
use utf8::all;

use URI;
use String::Util qw(trim);
use EggsML::EggsPI text => [qw(curl krakApiKey)];

my $uri = URI->new('https://api.eniro.com/cs/search/basic');
$uri->query_form(
    profile     => 'concieggs',
    key         => krakApiKey,
    country     => 'dk',
    version     => '1.1.3',
    geo_area    => 'KÃ¸benhavn',
    search_word => join(' ', @ARGV),
);
print trim(curl('-s', $uri->as_string));
