#!/usr/bin/env perl
# m a >>= f
use 5.012;
use warnings;
use IPC::System::Simple qw/capturex/;
use Env qw/EGGS_USER/;

sub quit {
    print shift;
    exit;
}

exit(1) unless @ARGV == 2;

# Ex: svin svip til :>>=: \sviner -> mind svip om at sviner
my ($ma, $f) = @ARGV;

my ($v, $fbody) = $f =~ qr/^\s* \\(\w+) \s* -> \s* (.+) \s*$/x;

quit("$EGGS_USER: Syntaks: kommando :>>=: \var -> kommando2 var\n") unless $fbody;

my $a = capturex('runcmd', split(/ /, $ma));
chomp $a;

quit("$EGGS_USER: Du skal give bind outputtet af en kommando.\n") unless $a;

$fbody =~ s/\b$v\b/$a/g;

my $res = capturex('runcmd', split(/ /, $fbody));
chomp $res;

quit("$EGGS_USER: Den kommando du binder til ser alts√• forkert ud.\n") unless $res;

printf("%s\n", $res);
